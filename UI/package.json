{
  "name": "cron-observer-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Cron Observer Frontend Monorepo",
  "scripts": {
    "dev": "pnpm --filter './apps/*' dev",
    "build": "pnpm --filter './packages/*' build && pnpm --filter './apps/*' build",
    "lint": "pnpm --filter './packages/*' lint && pnpm --filter './apps/*' lint",
    "type-check": "pnpm --filter './packages/*' type-check && pnpm --filter './apps/*' type-check",
    "clean": "pnpm --filter './packages/*' clean && pnpm --filter './apps/*' clean",
    "gen:api": "npx swagger2openapi ../backend/api-docs/swagger.json -o ../backend/api-docs/openapi.json && openapi-zod-client ../backend/api-docs/openapi.json -o ./packages/lib/src/api-client.ts"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "openapi-zod-client": "^1.18.3",
    "swagger2openapi": "^7.0.8",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/themes": "^3.2.1",
    "next-themes": "^0.4.6"
  }
}
