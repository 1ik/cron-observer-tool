{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@cron-observer/ui": [
        "../../packages/ui/src"
      ],
      "@cron-observer/lib": [
        "../../packages/lib/src"
      ],
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
